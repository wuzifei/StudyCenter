@*选项卡开始*@
<div id="MsgBox" style="display: none;"></div>
<div id="tt" class="easyui-tabs" style="width:auto;height:auto;">
</div>
<script type="text/javascript">
    function addTab(title, url,height) {
        if ($('#tt').tabs('exists', title)) {
            $('#tt').tabs('select', title);
        }
        else {
            var content ="";
            content = '<iframe scrolling="auto" frameborder="0"  src="' + url + '" style="width:100%;height:'+height+'px;"></iframe>';
            $('#tt').tabs('add', {
                title: title,
                content: content,
                //href:url,
                closable: height>500,
                loadingMessage:"正在加载中..."
            });

        }
    }
    $(document).ready(function () {
        //addTab('作业', '/study/homework/', 500);
        addTab('教师中心', '/study/teachercenter/', 500);
        $("#tt").tabs("select", 1);
        if (document.referrer.match("/testpaper/add") || document.referrer.match("/testpaper/edit")) {
            addTab('试卷管理', '/testpaper/index/', 650);
            $("#tt").tabs("select", 3);
        }
        

    });

</script>

