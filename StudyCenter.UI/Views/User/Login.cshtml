            padding: 7px;
        }

        .login-text
        {
            height: 24px;
            left: 24px;
            border: 1px solid #e9e9e9;
            background: #f9f9f9;
        }

        .login-text-focus
        {
            border: 1px solid #E6BF73;
        }

        .login-btn
        {
            width: 114px;
            height: 29px;
            color: #E9FFFF;
            line-height: 29px;
            background: url('/Content/Images/login/login-btn.gif') no-repeat;
            border: none;
            overflow: hidden;
            cursor: pointer;
        }

        #txtUsername, #code, #txtPassword
        {
            width: 191px;
        }

        #logincopyright
        {
            text-align: center;
            color: White;
            margin-top: 50px;
        }

        a
        {
            color: Black;
        }

            a:hover
            {
                color: Red;
                text-decoration: underline;
            }
