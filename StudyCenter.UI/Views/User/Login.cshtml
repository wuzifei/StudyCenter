    <script type="text/javascript">
        //当登陆成功的时候，返回数据，并执行此代码
        $(function () {
            $("#imgCode").click(function () {
                $(this).attr("src", $(this).attr("src") + 1);
            });
            //当iframe中session过期要求重新登录时
            if (top.location !== self.location) {
                top.location = self.location;
            }
            $("#loading").hide();
        });

        function beginLogin() {
            $("#btnLogin").attr("value", "正在登录...");
        }

        function loginFailure() {
            $("#btnLogin").attr("value", "重新登录 ");
        }

        function afterLogin(data) {
            if (data == "ok"){
                //window.location.href ="/user/index";
                window.location = "/user/index";
                $("#loading").show();
                $("#btnLogin").attr("value","正在跳转...");
            }
            else {
                $("#imgCode").click();
                alert(data);
            }
        }
        //function ChangeVCode() {
        //    this.attr("src").val("~/User/VCode?" + now());
        //    alert("Click");
        //}
    </script>

</head>
